
@{
    ViewBag.Title = "Tiến hành thanh toán";
}

<div class="container">
    <div class="header clearfix">
        <h2 class="text-muted" style="text-align:center">THANH TOÁN QUA VÍ ĐIỆN TỬ VNPAY</h2>
    </div>
    <div class="">
        <form id="form1" action="/Payment/RequetVNPAY" method="post">
            <input type="text" hidden="hidden" name="ServiceId" id="ServiceId" value="@ViewBag.ServiceId" />

            <div class="row">
                <div class="col-md-6">
                    <label style="font-weight: bold">Họ tên *:</label>
                    <input type="text" name="Name" id="Name" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label style="font-weight: bold">Số điện thoại *:</label>
                    <input type="text" name="Phone" id="Phone" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold">Email:</label>
                <input type="text" name="Email" id="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label style="font-weight: bold">Địa chỉ:</label>
                <input type="text" name="Address" id="Address" class="form-control" />
            </div>

            <div class="form-group">
                <label style="font-weight: bold">Số tiền:</label>
                <input type="text" name="TotalMoney" id="TotalMoney" class="form-control" />
            </div>

            <div class="form-group">
                <label style="font-weight: bold">Nội dung thanh toán (*)</label>
                <input type="text" placeholder="VD: Ủng hộ quỹ đồng bào miền Trung" name="ContentPayment" class="form-control" />
            </div>
            <div class="form-group">
                <label style="font-weight: bold">Ngân hàng</label>
                <select class="form-control" name="Bank">
                    <option value="">Không chọn</option>
                    <option value="NCB">Ngân hàng NCB</option>
                    <option value="SACOMBANK">Ngân hàng Sacombank</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning form-control" id="btnPayPopup" style="font-weight: bold; color: white">THANH TOÁN</button>
            </div>

        </form>
    </div>
</div>

<script src="~/Assets/js/jquery.min.js"></script>
<link href="https://pay.vnpay.vn/lib/vnpay/vnpay.css" rel="stylesheet" />
<script type="text/javascript" src="https://pay.vnpay.vn/lib/vnpay/vnpay.min.js"></script>