<!-- end service -->
<!-- our product -->
<div class="product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>Chiến dịch</h2>
                    @*<span>We package the products with best services to make you a happy customer.</span>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-bg">
    <div class="product-bg-white">
        <div class="container">
            <div class="row">
                @foreach (var item in lstServices)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="product-box">
                            <a href="/Home/ServiceDetail/@item.Id">
                                <i><img src="@item.Image" style="height: 115px; width: 205px;" /></i>
                            </a>
                            @if (item.Name.Length > 35)
                            {
                                
                                    <h3 style="height: 75px;"><a href="/Home/ServiceDetail/@item.Id">@item.Name.Substring(0, 35)...  </a></h3>
                               
                            }
                            else
                            {
                                <h3 style="height: 75px;"> <a href="/Home/ServiceDetail/@item.Id">@item.Name</a></h3>
                            }

                            <span>@CommonUtil.RenderPrice(item.Money) đ</span><br />
                            <a class="btn btn-warning" href="/Payment/Index?serviceId=@item.Id">Quyên góp</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
<div class="product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>Tin tức </h2>
                    @*<span>We package the products with best services to make you a happy customer.</span>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="product-bg">
    <div class="product-bg-white">
        <div class="container">
            <div class="row">
                @foreach (var item in lstNews)
                {
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                        <div class="service-box" style="height: auto">
                            <i><img style="height:207px;width: max-content;" src="@item.Image" /></i>
                            @if (item.Title.Length > 50)
                            {
                                <h3 style="text-align:justify;height:70px;line-height: 24px;">@item.Title.Substring(0, 50)..</h3>
                            }
                            else
                            {
                                <h3 style="text-align:justify;height:70px;line-height: 24px;">@item.Title</h3>
                            }

                            @if (item.Description.Length > 100)
                            {
                                <p style="text-align:justify;height:84px;">@item.Description.Substring(0, 100).."</p><br />
                            }
                            else
                            {
                                <p style="text-align:justify;height:84px;">@item.Description</p><br />
                            }
                            <p>@String.Format("{0:dd/MM/yyyy}", item.CreateDate)</p><br />
                            <a href="/News/NewDetail/@item.Id" style="text-align:center; font-size: 16px; color:#0026ff">Xem thêm</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
<div class="product-bg">

    <div class="Clients_bg_white">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
