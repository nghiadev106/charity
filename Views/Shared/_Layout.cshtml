<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    <div class="loader_bg">
        <div class="loader"><img src="/Assets/images/loading.gif" alt="#" /></div>
    </div>
    <!-- end loader -->
    <!-- header -->
    <header>
        <!-- header inner -->
        <div class="header">
            <div class="head_top">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="top-box">
                                <ul class="sociel_link">
                                    <li> <a href="#"><i class="fa fa-facebook-f"></i></a></li>
                                    <li> <a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li> <a href="#"><i class="fa fa-instagram"></i></a></li>
                                    <li> <a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                            <div class="top-box">
                                <p>Hành động nhỏ - mang ý nghĩa lớn</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <header id="header" class="container">
                <div class="row">
                    <a href="/" id="logo" class="fl-left">
                        <img src="~/Assets/images/logo.PNG" alt="logo">
                    </a>
                    <ul id="main-menu">
                        <li><a href="/">trang chủ</a></li>
                        <li><a href="/Home/About">Giới thiệu</a></li>
                        <li><a href="/Home/Service">Chiến dịch</a></li>
                        <li>
                            <a href="/News/Index">Tin tức</a>
                            <ul class="sub-menu">
                                @foreach (var category in ViewBag.ListCategory)
                                {
                                    <li>
                                        <a href="/News/NewByCategoryId?id=@category.Id">@category.Name</a>
                                    </li>
                                }
                            </ul>
                        </li>

                        <li> <a href="/Home/Video">Video</a> </li>
                        <li> <a href="/Home/Contact">Liên hệ</a> </li>
                    </ul>
                    <div id="search-box">
                        <div class="search">
                            @if (ViewBag.SearchNews == "NewsSearch")
                            {
                                <form method="get" action="/News/SearchNews">
                                    <input class="search-txt" type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
                                    <button id="btnSearch" class="search-btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            }
                            else if (ViewBag.SearchVideo == "VideoSearch")
                            {
                                <form method="get" action="/Home/SearchVideo">
                                    <input class="search-txt" type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
                                    <button id="btnSearch" class="search-btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            }
                            else
                            {
                                <form method="get" action="/Home/Search">
                                    <input class="search-txt" type="text" id="txtKeyword" name="keyword" placeholder="Từ khóa">
                                    <button id="btnSearch" class="search-btn" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            }


                        </div>
                    </div>
                    <div style="margin-top: 37px; margin-left: 9px; "><a href="/Admin/Login/Index" class="btn btn-warning">Login</a></div>
                </div>
            </header>

</header>


    @RenderBody()

    <!--  footer -->
