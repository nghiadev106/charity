@model ProjectFinal.Models.ServiceModel
@{
    ViewBag.Title = "Thêm chiến dịch";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section footerJS{
    <script src="~/Assets/admin/libs/ckeditor/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#desc'), {
                // toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
               // minHeight: '300px'
            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Thêm mới chiến dịch
        </h1>
        <ol class="breadcrumb">
            <li><a href="Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="Admin/Service/Index">Chiến dịch</a></li>
            <li class="active">Thêm chiến dịch</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("Create", "Service", FormMethod.Post, new { Area = "Admin", enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên chiến dịch</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Số tiền</label>
                                @Html.TextBoxFor(model => model.Money, new { type = "number", @class = "form-control decimalnumber" })
                                @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mô tả</label>
                                @Html.TextAreaFor(model => model.Descripttion, new { @class = "form-control",@id="desc" })
                                @Html.ValidationMessageFor(model => model.Descripttion, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Từ ngày</label>
                                @Html.TextBoxFor(model => model.FromDate, "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Đến ngày ngày</label>
                                @Html.TextBoxFor(model => model.ToDate, "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
                                @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Logo</label>
                                <input type="file" name="LogoFile" class="form-control" />
                                @Html.ValidationMessageFor(model => model.LogoFile, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Trạng thái</label>
                                <select class="form-control" id="Status" name="Status">
                                    <option value="1" selected>Hoạt động</option>
                                    <option value="0">Khóa</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-5">
                                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                                </div>
                            </div>
                        }
                        <div>
                            <a class="btn btn-danger" href="@Url.Action("Index", "Service", new { Area = "Admin" })">Quay lại</a>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


