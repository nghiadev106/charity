@model ProjectFinal.ViewModels.OrderViewModel
@{
    ViewBag.Title = "chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Giao dịch
        </h1>
        <ol class="breadcrumb">
            <li><a href="Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="Admin/Order/Index"> Giao dịch</a></li>
            <li class="active">Chi tiết giao dịch</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã giao dịch</label>
                            @Html.LabelForModel(Model.OrderId, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên người ủng hộ</label>
                            @Html.LabelForModel(Model.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên chiến dịch</label>
                            @Html.LabelForModel(Model.ServiceName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số tiền ủng hộ</label>
                            @Html.LabelForModel(CommonUtil.RenderPrice(Model.TotalMoney) + "đ", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số điện thoại</label>
                            @Html.LabelForModel(Model.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            @Html.LabelForModel(Model.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Địa chỉ</label>
                            @Html.LabelForModel(Model.Address, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày giao dịch</label>
                            @Html.LabelForModel(String.Format("{0:dd/MM/yyyy}", Model.CreateDate), new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Ngày giao dịch</label>
                            @if (Model.PaymentTypeId == 1)
                            {
                                <label class="form-control">Thẻ ATM nội địa</label>
                            }
                            else if (Model.PaymentTypeId == 2)
                            {
                                <label class="form-control">Thẻ tín dụng</label>
                            }
                            else
                            {
                                <label class="form-control">Ví điện tử</label>
                            }
                        </div>
                      
                            <div>
                                <a class="btn btn-danger" href="@Url.Action("Index", "Order", new { Area = "Admin" })">Quay lại</a>
                            </div>
                      

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


