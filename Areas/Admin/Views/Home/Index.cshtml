@using System.Web.UI.WebControls

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    var topTrans = (List<ProjectFinal.ViewModels.OrderViewModel>) ViewBag.TopTrans;
}
@section footerJS{
    <script src="~/Assets/admin/bower_components/chart.js/Chart.js"></script>
}
<script src="~/Assets/admin/bower_components/chart.js/Chart.js"></script>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@ViewBag.CountTrans</h3>

                            <p>Tổng số giao dịch</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.Total.ToString("N0")</h3>

                            <p>Tổng tiền thu được</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@ViewBag.CountNews</h3>

                            <p>Tổng số tin tức</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@ViewBag.CountVideos</h3>

                            <p>Tổng số video</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- /.row -->
            <!-- Main row -->

            <div class="row">
                <div class="col-xs-12">
                    <h3>Top 10 giao dịch nhiều tiền nhất</h3>
                    <div class="box">
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Họ tên</th>
                                        <th>SĐT</th>
                                        <th>Email</th>
                                        <th>Số tiền</th>
                                        <th>Chiến dịch</th>
                                        <th>#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var stt = 0;
                                        foreach (var item in topTrans)
                                        {
                                            <tr>
                                                <td>@Html.Raw(stt = stt + 1)</td>
                                                <td>@item.Name</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>@Convert.ToDecimal(item.TotalMoney).ToString("N0") đ</td>
                                                 <td>@item.ServiceName</td>
                                                 <td><a href="/Admin/Order/Detail?orderId=@item.OrderId" class="btn btn warning glyphicon glyphicon-eye-open"></a></td>
                                            </tr>
                                        }
                                    }

                                </tbody>

                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
</div>
<!-- /.content-wrapper -->